<h1>BURGERS</h1>

<h2>Eat da Burger</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{!-- {{> cats/cat-block sleep=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devour The burger</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name: </label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devoured<br>
    <input type="radio" name="sleepy" value="0"> not devoured
  </div>

  <button type="submit">Add the Burger</button>
</form>
